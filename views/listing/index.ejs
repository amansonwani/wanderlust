                  <div><i class="fa-solid fa-bed"></i></div>
                  <p>room</p>
            </div>
            <div class="filter">
                  <div><i class="fa-solid fa-water-ladder"></i></div>
                  <p>amazing pools</p>
            </div>
            <div class="filter">
                  <div><i class="fa-solid fa-igloo"></i></div>
                  <p>cabin</p>
            </div>
            <div class="filter">
                  <div><i class="fa-solid fa-tractor"></i></div>
                  <p>farm</p>
            </div>
            <div class="filter">
                  <div><i class="fa-solid fa-hotel"></i></div>
                  <p>hotel</p>
            </div>
            <div class="filter">
                  <div><i class="fa-solid fa-film"></i></div>
                  <p>movie</p>
            </div>
            <div class="filter">
                  <div><i class="fa-solid fa-square-h"></i></div>
                  <p>hospital</p>
            </div>
            <div class="filter">
                  <div><i class="fa-solid fa-umbrella-beach"></i></div>
                  <p>beach</p>
            </div>
            <div class="filter">
                  <div><i class="fa-solid fa-film"></i></div>
                  <p>movie</p>
            </div>
            <div class="filter">
                  <div><i class="fa-solid fa-snowflake"></i></div>
