<% layout("/layouts/boilerplate") %>
<style>
      #filter{
            display: flex;
            margin-top: 5px;
            margin-bottom: 5px;
            flex-wrap: wrap;


      }
      .filter{
            margin-left: 2rem;
            text-align: center;
            opacity: 0.7;
      }
      .filter:hover{
            opacity: 1;
            cursor: pointer;
      }
      .tax-switch{
            border: 1px solid black;
            border-radius: 1rem;
            padding: 1rem;
            height: 3.2rem;
            text-align: center;
            margin-left: 3rem;
      }
      .tax-info{
            display: none;
      }
</style>
<body>

