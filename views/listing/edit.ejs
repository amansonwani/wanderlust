<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your List</h3>
    <form method="POST" action="/listing/<%=data._id%>?_method=PUT" enctype="multipart/form-data">
       <div class="mb-3">
         <label for="title" class="form-label">Title</label>
        <input type="text" value="<%=data.title%>"   name="listing[title]" class="form-control"/>
       </div>
       <div class="mb-3">
         <label for="description" class="form-label">Description</label>
         <textarea  name="listing[description]" cols="80" rows="5" class="form-control"><%=data.description%></textarea>
       </div>
       <div class="mb-3">
         <label for="image" class="form-label">Upload New Image</label>
         <input type="file"  name="listing[image]" class="form-control"/>
       </div>
       <div class="mb-3">
         <label for="price" class="form-label">Price</label>
         <input type="Number" value="<%=data.price%>" name="listing[price]" class="form-control"/>
       </div>
       <div class="mb-3">
         <label for="location" class="form-label">Location</label>
         <input type="text" value="<%=data.location%>" name="listing[location]" class="form-control"/>
       </div>
       <div class="mb-3">
         <label for="country" class="form-label">Country</label>
         <input type="text" value="<%=data.country%>" name="listing[country]" class="form-control"/>
       </div>
        <button class="add-btn btn btn-dark mb-3 mt-3">Edit</button>
     </form>
        </div>
    </div>
</body>